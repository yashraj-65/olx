<style>
  .card {
    width: 240px;
    height: 360px; /* Slightly taller to fit names */
    border-radius: 15px;
    background: #fff;
    position: relative;
    border: 2px solid #000;
    transition: 0.3s ease-out;
    overflow: hidden; 
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 8px 8px 0px 0px rgba(0, 0, 0, 1);
  }

  .card-img {
    width: 100%;
    height: 130px;
    background-color: #f0f0f0;
    border-bottom: 2px solid #000;
  }

  .card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-details {
    padding: 12px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex-grow: 1;
  }

  .text-title {
    font-size: 1.1rem;
    font-weight: 800;
    margin: 0;
    text-transform: uppercase;
  }

  .text-price {
    color: #28a745;
    font-weight: 900;
    font-size: 1.1rem;
  }

  /* User Names Section */
  .text-users {
    font-size: 0.75rem;
    color: #000;
    margin-top: 5px;
    font-weight: 600;
  }

  .user-line {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px dashed #ccc;
    padding: 2px 0;
  }

  /* Fixed Button Section */
  .card-actions {
    display: flex;
    gap: 8px;
    margin-top: auto;
    padding-bottom: 40px; /* Space for the hover button */
  }

  .card-actions form { flex: 1; }

  .btn-action {
    width: 100%;
    padding: 6px;
    border: 2px solid #000;
    font-weight: 800;
    font-size: 0.7rem;
    cursor: pointer;
    text-transform: uppercase;
  }

  .btn-close { background: #b7ebcdff; }
  .btn-reject { background: #d37979ff; }

  /* The Hover-up Button (Original Style) */
  .card-button {
    transform: translate(-50%, 125%);
    width: 85%;
    background-color: #000; 
    color: #fff;
    font-size: 0.8rem;
    font-weight: 800;
    padding: .7rem;
    position: absolute;
    left: 50%;
    bottom: 15px;
    opacity: 0;
    transition: 0.3s ease-out;
    text-decoration: none;
    text-align: center;
    text-transform: uppercase;
  }

  .card:hover .card-button {
    transform: translate(-50%, 0);
    opacity: 1;
  }
</style>

<div class="card">
  <div class="card-img">
    <% if deal.item.image.attached? %>
      <%= image_tag deal.item.image %>
    <% else %>
      <div style="text-align:center; padding-top:40px; color:#ccc">NO IMAGE</div>
    <% end %>
  </div>

  <div class="card-details">
    <p class="text-title"><%= deal.item.title %></p>
    <p class="text-price"><%= number_to_currency(deal.agreed_price) %></p>
    
    <div class="text-users">
      <div class="user-line">
        <span>S: <%= deal.conversation.seller_profile.userable.name.truncate(12) %></span>
        <span><%= deal.seller_marked_done ? "✅" : "⏳" %></span>
      </div>
      <div class="user-line">
        <span>B: <%= deal.conversation.buyer_profile.userable.name.truncate(12) %></span>
        <span><%= deal.buyer_marked_done ? "✅" : "⏳" %></span>
      </div>
    </div>

    <div class="card-actions">
      <%= button_to "Accept", deal_path(deal), method: :patch, class: "btn-action btn-close" %>
      <%= button_to "Reject", deal_path(deal), method: :delete, class: "btn-action btn-reject" %>
    </div>
  </div>

  <%= link_to "View Full Deal", item_path(deal.item), class: "card-button" %>
</div>