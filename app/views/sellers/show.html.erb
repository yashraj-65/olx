<style>/* Layout Container */
.profile-layout {
  display: flex;
  gap: 60px;
  max-width: 1200px;
  margin: 40px auto;
  align-items: flex-start;
}

/* Sidebar Styling */
.profile-sidebar {
  flex: 0 0 280px;
  position: sticky;
  top: 40px;
  text-align: center;
}

.profile-avatar-large, .avatar-placeholder-large {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin: 0 auto 20px;
  object-fit: cover;
  border: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9f9f9;
  font-size: 2.5rem;
  font-weight: 300;
  color: #666;
}

.user-name {
  font-family: 'Playfair Display', serif;
  font-size: 1.75rem;
  margin-bottom: 8px;
  color: #1a1a1a;
}

.member-since {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  color: #999;
  margin-bottom: 20px;
}

.user-rating-box {
  margin-bottom: 25px;
}

.star-rating {
  color: #d4af37; /* Gold */
  letter-spacing: 2px;
}

.rating-count {
  font-size: 0.85rem;
  color: #666;
  margin-left: 5px;
}

.edit-profile-link {
  display: block;
  border: 1px solid #1a1a1a;
  padding: 10px;
  font-size: 0.7rem;
  letter-spacing: 2px;
  text-decoration: none;
  color: #1a1a1a;
  transition: 0.3s;
  margin-bottom: 30px;
}

.edit-profile-link:hover {
  background: #1a1a1a;
  color: #fff;
}

.user-bio {
  text-align: left;
  border-top: 1px solid #eee;
  padding-top: 25px;
}

.collector-note-heading {
  font-size: 0.7rem;
  letter-spacing: 2px;
  color: #bbb;
  margin-bottom: 12px;
}

.bio-text {
  font-size: 0.95rem;
  line-height: 1.6;
  color: #444;
  font-style: italic;
}

/* Tab Logic */
.tab-radio { display: none; }

.industrial-nav {
  display: flex;
  gap: 40px;
  border-bottom: 1px solid #eee;
  margin-bottom: 30px;
}

.nav-item {
  padding-bottom: 15px;
  cursor: pointer;
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #aaa;
  position: relative;
  transition: 0.3s;
}

.nav-item:hover { color: #1a1a1a; }

/* Active Tab Underline */
#tab-reviews:checked ~ .industrial-nav label[for="tab-reviews"],
#tab-active:checked ~ .industrial-nav label[for="tab-active"],
#tab-sold:checked ~ .industrial-nav label[for="tab-sold"],
#tab-bought:checked ~ .industrial-nav label[for="tab-bought"] {
  color: #1a1a1a;
}

#tab-reviews:checked ~ .industrial-nav label[for="tab-reviews"]::after,
#tab-active:checked ~ .industrial-nav label[for="tab-active"]::after,
#tab-sold:checked ~ .industrial-nav label[for="tab-sold"]::after,
#tab-bought:checked ~ .industrial-nav label[for="tab-bought"]::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  width: 100%;
  height: 2px;
  background: #1a1a1a;
}

/* Showing the content */
.tab-content { display: none; }

#tab-reviews:checked ~ .tab-panes #reviews-section,
#tab-active:checked ~ .tab-panes #active-section,
#tab-sold:checked ~ .tab-panes #sold-section,
#tab-bought:checked ~ .tab-panes #bought-section {
  display: block;
  animation: fadeIn 0.5s ease forwards;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(5px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Content Grids */
.profile-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 25px;
}

.no-items-msg {
  padding: 50px;
  text-align: center;
  background: #fcfcfc;
  border: 1px dashed #ddd;
  color: #999;
}
</style>
<div class="container profile-layout">
  <aside class="profile-sidebar">
    <div class="sidebar-card">
      <div class="profile-avatar-wrapper">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "profile-avatar-large" %>
        <% else %>
          <div class="avatar-placeholder-large"><%= @user.name.first.upcase %></div>
        <% end %>
      </div>

      <h1 class="user-name"><%= @user.name %></h1>
      <p class="member-since">Curating since <%= @user.created_at.strftime("%B %Y") %></p>

      <div class="user-rating-box">
        <span class="star-rating">★★★★☆</span>
        <span class="rating-count">
          <%=@user.seller.reviews.average(:rating)%>
        <%=(@user.seller.reviews.count)%>
        </span>
      </div>

      <% if @user == current_user %>
        <%= link_to "EDIT MY SHOP", edit_user_registration_path, class: "edit-profile-link" %>
      <% end %>

      <div class="user-bio">
        <h3 class="collector-note-heading">THE COLLECTOR'S NOTE</h3>
        <p class="bio-text">
          <%= @user.description.presence || "This collector hasn't shared their story yet." %>
        </p>
      </div>
    </div>
  </aside>

  <main class="profile-main-content">
    <input type="radio" name="profile_tab" id="tab-reviews" class="tab-radio" checked>
    <input type="radio" name="profile_tab" id="tab-active" class="tab-radio">
    <input type="radio" name="profile_tab" id="tab-sold" class="tab-radio">
    <input type="radio" name="profile_tab" id="tab-bought" class="tab-radio">

    <nav class="industrial-nav">
      <label for="tab-reviews" class="nav-item">Feedback (<%= @reviews.count %>)</label>
      <label for="tab-active" class="nav-item">Live Listings (<%= @active_listings.count %>)</label>
      <% if @user == current_user %>
        <label for="tab-sold" class="nav-item">Sold</label>
        <label for="tab-bought" class="nav-item">Bought</label>
      <% end %>
    </nav>

    <div class="tab-panes">
      <section id="reviews-section" class="tab-content">
        <div class="profile-grid">
          <%= render partial: "reviews/review", collection: @reviews, as: :review if @reviews.any? %>
        </div>
      </section>

      <section id="active-section" class="tab-content">
        <div class="profile-grid">
                    <% if @active_listings.any? %>
            <%# This renders the _item.html.erb partial for every item in @sold_items %>
            <%= render partial: "items/item", collection: @active_listings, as: :item %>
          <% else %>
            <p class="no-items-msg">No sold items yet.</p>
          <% end %>
           
        </div>
      </section>

   <section id="sold-section" class="tab-content">
        <div class="profile-grid">
          <% if @sold_items.any? %>
            <%# This renders the _item.html.erb partial for every item in @sold_items %>
            <%= render partial: "items/item", collection: @sold_items, as: :item %>
          <% else %>
            <p class="no-items-msg">No sold items yet.</p>
          <% end %>
        </div>
      </section>

      <section id="bought-section" class="tab-content">
          <div class="profile-grid">
            <% if @bought_items.any? %>
            <%# This renders the _item.html.erb partial for every item in @bought_items %>
            <%= render partial: "items/item", collection: @bought_items, as: :item %>
            <% else %>
            <p class="no-items-msg">No purchase history.</p>
          <% end %>
        </div>
      </section>
    </div>
  </main>
</div>