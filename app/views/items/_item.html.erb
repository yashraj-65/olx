<style>
  /* Container for the background (add to your parent view) */
  body {
    background: linear-gradient(45deg, #f3f4f7, #e2e8f0);
    min-height: 100vh;
  }

  .blog-card {

  
 
    width: 100%;
    max-width: 260px;
    background: rgba(238, 226, 226, 0.4); 
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    
   
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    
    
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-8px); /* Smooth lift-up */
    background: rgba(255, 255, 255, 0.5);
    box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.15);
    cursor: pointer;
  }

  /* Image area - softened */
  .item-image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    display: block;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .card-body {
    padding: 16px;
  }

  .price-tag {
    font-size: 1.2rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 2px;
  }

  .hero-title {
    font-size: 0.85rem;
    font-weight: 500;
    color: #4a5568;
    margin: 0 0 15px 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Button Row */
  .button-row {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  /* Glass Buttons */
  .btn-minimal {
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 10px;
    font-size: 11px;
    font-weight: 600;
    cursor: pointer;
    transition: 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    text-decoration: none;
  }

  /* Primary Action */
  .btn-brutal-yellow { 
    background: rgba(255, 222, 3, 0.7); 
    color: #000; 
    width: 100%; 
    box-shadow: 0 4px 15px rgba(255, 222, 3, 0.2);
  }
  
  .btn-brutal-yellow:hover {
    background: rgba(255, 222, 3, 0.9);
  }

  /* Secondary/Like Action */
  .btn-brutal-white { 
    background: rgba(255, 255, 255, 0.5); 
    color: #000; 
    width: 100%; 
  }

  .btn-minimal:active {
    transform: scale(0.95);
  }
</style>
<div class="blog-card">
  <% if item.image.attached? %>
    <div class="item-image">
      <%= image_tag item.image %>
    </div>
  <% else %>
    <div class="item-image" style="height: 150px; background: rgba(255,255,255,0.2);"></div>
  <% end %>

  <div class="card-body">
    <div class="price-tag"><%= number_to_currency(item.price, precision: 0) %></div>
    <div class="hero-title"><%= item.title %></div>
    
    <% if item.address.present? %>
      <div style="font-size: 0.75rem; color: #666; margin-bottom: 12px; display: flex; align-items: center; gap: 4px;">
        <span>üìç</span>
        <span><%= truncate(item.address, length: 30) %></span>
      </div>
    <% end %>

    <div class="button-row">
      <div class="btn-view-wrap" style="flex: 3;">
        <%= link_to "Details", item_path(item), class: "btn-minimal btn-brutal-yellow" %>
      </div>

      <div class="btn-like-wrap" style="flex: 1;">
        <% existing_like = item.likes.find_by(buyer: current_user.buyer) %>
        <% if existing_like %>
          <%= button_to item_like_path(item, existing_like), method: :delete, class: "btn-minimal btn-brutal-white", style: "border:none; width:100%;" do %>
            <span style="color: #ff4d4d;">‚ù§Ô∏è</span>
          <% end %>
        <% else %>
          <%= button_to item_likes_path(item), method: :post, class: "btn-minimal btn-brutal-white", style: "border:none; width:100%;" do %>
            ü§ç
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>