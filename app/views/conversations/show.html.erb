<%# CSS for the Modal and Stacking %>
<style>
  html, body {
    height: 100%;
    margin: 0;
    overflow: hidden; /* Vital: Keeps the browser from scrolling */
    background: #f0f0f0;
  }

  /* Main Wrapper: Full Screen */
  .chat-wrapper {
    height: 85vh;
    display: flex;
    flex-direction: column;
    padding: 10px;
    padding-top: 1px;
    box-sizing: border-box;
  }

  .card-container {
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 4px solid black;
    background: white;
    box-shadow: 10px 10px 0px black;
    overflow: hidden;
  }

  /* The Scrollable Part */
  #chat-window {
    flex: 1; /* This takes up all available space between header and footer */
    overflow-y: auto;
    background-color: #f0f0f0;
    background-image: radial-gradient(black 1px, transparent 0);
    background-size: 20px 20px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  /* Modal Overlay: Must be outside the main container flow */
  .modal-overlay {
    display: none; 
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(2px);
    z-index: 9999;
    justify-content: center;
    align-items: center;
  }

  .modal-card {
    background: white;
    padding: 30px;
    border: 4px solid black;
    box-shadow: 10px 10px 0px black;
    width: 90%;
    max-width: 450px;
    position: relative;
  }

  .btn-brutal {
    border: 3px solid black;
    box-shadow: 4px 4px 0px black;
    cursor: pointer;
    font-weight: 900;
    transition: all 0.1s;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-brutal:active {
    transform: translate(2px, 2px);
    box-shadow: 0px 0px 0px black;
  }
</style>

<div class="chat-wrapper">
  <div class="card-container">
    
    <%# Header Section %>
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; padding: 15px; border-bottom: 4px solid black; background: white; flex-shrink: 0;">
      <div style="display: flex; align-items: center;">
        <div class="img-avatar" style="width: 45px; height: 45px; border: 3px solid black; background: <%= @conversation.item.sold? ? 'red' : '#ffde03' %>; margin-right: 15px; margin-right: 15px;"></div>
        <div class="text-chat">
          <span style="font-size: 0.7rem; color: #666; display: block; text-transform: uppercase;">Conversation with</span>
          <% other_user = @conversation.seller_profile.userable == current_user ? @conversation.buyer_profile.userable : @conversation.seller_profile.userable %>
          <% if @conversation.item.sold? %>
            <span style="background: red; color: white; font-size: 0.6rem; padding: 2px 5px; border-radius: 3px; vertical-align: middle; margin-left: 5px;">SOLD</span>
          <% else %>
            <span style="background: #28a745; color: white; font-size: 0.6rem; padding: 2px 5px; border-radius: 3px; vertical-align: middle; margin-left: 5px;">AVAILABLE</span>
          <% end %>
          <span style="font-weight: 900; font-size: 1.2rem;"><%= other_user.name %></span>
        </div>
      </div>

      <button type="button" 
              class="btn-brutal" 
              style="padding: 10px 20px; background: #ffde03; font-size: 14px;"
              onclick="document.getElementById('propose-modal').style.display='flex'">
        PROPOSE DEAL
      </button>
    </div>

    <%# Messages Body %>
<div id="chat-window" data-current-user-id="<%= current_user.id %>">
  <%= turbo_stream_from @conversation %>
  <div id="messages_list">
    <%= render @messages %>
  </div>
</div>

    <%# Input Section %>
    <div class="message-input" style="padding: 20px; background: white; border-top: 4px solid black; flex-shrink: 0;">
      <%= form_with(model: [@conversation, @message], id: "message_form", style: "display: flex; gap: 10px;") do |f| %>
        <%= f.text_field :body, 
            placeholder: "Type your message...", 
            autocomplete: 'off',
            style: "flex-grow: 1; border: 3px solid black; padding: 15px; font-weight: bold; font-size: 16px;" %>
        
        <%= f.submit "SEND", 
            class: "btn-brutal", 
            style: "width: 100px; background: black; color: white;" %>
      <% end %>
    </div>
  </div>
</div>

<%# THE MODAL %>
<div id="propose-modal" class="modal-overlay" onclick="if(event.target == this) this.style.display='none'">
  <div class="modal-card">
    <button type="button" 
            style="position: absolute; top: 10px; right: 15px; background: none; border: none; font-size: 30px; font-weight: bold; cursor: pointer;" 
            onclick="document.getElementById('propose-modal').style.display='none'">&times;</button>
    
    <h2 style="margin: 0 0 10px 0; text-transform: uppercase; font-weight: 900;">New Proposal</h2>
    <p style="margin-bottom: 25px; color: #666;">Set the final price for <strong><%= @conversation.item.title %></strong>.</p>

    <%= form_with(model: [@conversation, Deal.new], local: true) do |f| %>
      <div style="margin-bottom: 25px;">
        <label style="display: block; font-weight: 900; margin-bottom: 10px;">AGREED PRICE ($)</label>
        <%= f.number_field :agreed_price, value: @conversation.item.price, 
            style: "width: 100%; border: 3px solid black; padding: 15px; font-size: 20px; font-weight: bold; box-sizing: border-box;" %>
      </div>

      <div style="display: flex; gap: 10px;">
        <%= f.submit "SEND PROPOSAL", class: "btn-brutal", style: "flex: 2; background: #28a745; color: white; padding: 15px;" %>
        <button type="button" class="btn-brutal" style="flex: 1; background: #eee;" onclick="document.getElementById('propose-modal').style.display='none'">CANCEL</button>
      </div>
    <% end %>
  </div>
</div>