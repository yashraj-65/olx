<style>
  
  .btn-brutal {
    width: 100%;
    height: 3em;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    border: 2px solid black;
    background-color: #f0f0f0;
    box-shadow: 3px 3px 0px black;
    cursor: pointer;
    transition: all 0.1s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-brutal:active {
    transform: translate(2px, 2px);
    box-shadow: 0px 0px 0px black;
  }
  
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4); 
  backdrop-filter: blur(2px);    
  display: flex;                 
  justify-content: center;       
  align-items: center;           
  z-index: 9999;                 
}

/* The actual white box */
.modal-card {
  background: white;
  padding: 30px;
  width: 90%;
  max-width: 450px;
  border: 4px solid black;       
  box-shadow: 10px 10px 0px black; 
  position: relative;            
}


.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  text-decoration: none;
  font-size: 24px;
  color: black;
  font-weight: bold;
}
</style>
<div class="chat-header" style="display: flex; justify-content: space-between; align-items: center; padding: 15px; border-bottom: 4px solid black; background: #fff;">
  <h3 style="margin: 0;">Chat with <%= @conversation.seller_profile.userable.name %></h3>

  <%# Trigger Button %>
  <a href="javascript:void(0)" 
     class="btn-brutal btn-chat" 
     style="text-decoration: none; display: inline-flex; align-items: center; justify-content: center; height: 3em; width: 12em; background: #e9e8e3ff; font-weight: bold; border: 3px solid black; box-shadow: 2px 2px 0px black;"
     onclick="document.getElementById('propose-modal').style.display='flex'">
    Propose a Deal
  </a>
</div>

<div class="messages-display" style="display: flex; flex-direction: column; gap: 15px; padding: 20px; background: #f9f9f9; height: 500px; overflow-y: auto;">
  <% @messages.each do |message| %>
    <%# Check if the current user sent the message %>
    <% is_current_user = (message.user_id == current_user.id) %>
    
    <div class="message-row" style="display: flex; <%= is_current_user ? 'justify-content: flex-end;' : 'justify-content: flex-start;' %>">
      <div class="message-bubble" style="
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 15px;
        font-family: sans-serif;
        <%= is_current_user ? 'background-color: #007bff; color: white; border-bottom-right-radius: 2px;' : 'background-color: #e9e9eb; color: black; border-bottom-left-radius: 2px;' %>
      ">
        <div class="content"><%= message.body %></div>
        <div class="time" style="font-size: 0.7em; margin-top: 5px; opacity: 0.8; text-align: right;">
          <%= message.created_at.strftime("%I:%M %p") %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="reply-section" style="padding: 20px;">
  <%= form_with(model: [@conversation, @message], local: true) do |f| %>
    <%= f.text_area :body, placeholder: "Type your message...", style: "width: 100%; border-radius: 5px; border: 1px solid #ccc; padding: 10px;" %>
    <%= f.submit style: "background: #28a745; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; margin-top: 10px;" %>
  <% end %>
</div>

<div id="propose-modal" class="modal-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100vh; background: rgba(0,0,0,0.5); z-index: 9999; justify-content: center; align-items: center;">
  
  <div class="modal-card" style="background: white; padding: 30px; border: 4px solid black; box-shadow: 10px 10px 0px black; width: 90%; max-width: 450px; position: relative;">
    
    <a href="javascript:void(0)" 
       class="close-btn" 
       style="position: absolute; top: 10px; right: 15px; text-decoration: none; font-size: 28px; color: black; font-weight: bold;" 
       onclick="document.getElementById('propose-modal').style.display='none'">&times;</a>
    
    <h2 class="hero-title" style="margin: 0; font-size: 28px; text-align: left;">New Proposal</h2>
    <p style="font-size: 14px; margin-bottom: 25px; color: #666;">Confirm the final agreed price below.</p>

    <%= form_with(model: [@conversation, Deal.new], local: true) do |f| %>
      <div style="margin-bottom: 20px;">
        <label style="display: block; font-weight: bold; margin-bottom: 8px;">Agreed Price</label>
        <%= f.number_field :agreed_price, 
            value: @conversation.item.price, 
            class: "btn-brutal", 
            style: "width: 100%; box-sizing: border-box; background: #fff; padding: 12px; border: 3px solid black;" %>
      </div>

      <div style="display: flex; gap: 10px;">
        <%= f.submit "Send Proposal", class: "btn-brutal btn-chat", style: "flex: 2; cursor: pointer; padding: 10px; background: #28a745; color: white; border: 3px solid black; font-weight: bold;" %>
        <button type="button" class="btn-brutal" style="flex: 1; background: #eee; cursor: pointer; border: 3px solid black;" onclick="document.getElementById('propose-modal').style.display='none'">
          Cancel
        </button>
      </div>
    <% end %>
  </div>
</div>

