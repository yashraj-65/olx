<%# Professional Messenger Styling %>
<style>
  :root {
    --primary: #0084ff;
    --bg-light: #f0f2f5;
    --border: #e4e6eb;
    --text-main: #1c1e21;
    --text-muted: #65676b;
    --shadow: 0 2px 4px rgba(0,0,0,.1), 0 8px 16px rgba(0,0,0,.08);
  }

  /* Reset layout for full-screen feel */
  body { margin: 0; background-color: #f0f2f5; }

  .chat-container {
    height: 80vh;
    max-width: 1000px;
    margin: 20px auto;
    background: white;
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    box-shadow: var(--shadow);
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  /* Header */
  .chat-header {
    padding: 20px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border);
    background: white;
  }

  .user-info { display: flex; align-items: center; gap: 12px; }
  
  .avatar-circle {
    width: 40px; height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #6e8efb, #a7a1ff);
    color: white; font-weight: bold;
    display: flex; align-items: center; justify-content: center;
  }

  .btn-action {
    background-color: var(--primary);
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-action:hover { background-color: #0073e6; }

  /* Messages Area */
  .messages-viewport {
    flex-grow: 1;
    overflow-y: auto;
    padding: 20px;
    background-color: white;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .msg-bubble {
    max-width: 70%;
    padding: 10px 16px;
    font-size: 15px;
    line-height: 1.4;
  }

  .msg-sent {
    align-self: flex-end;
    background-color: var(--primary);
    color: white;
    border-radius: 18px 18px 4px 18px;
  }

  .msg-received {
    align-self: flex-start;
    background-color: #e4e6eb;
    color: var(--text-main);
    border-radius: 18px 18px 18px 4px;
  }

  .timestamp {
    font-size: 11px;
    margin-top: 4px;
    opacity: 0.7;
    text-align: right;
  }


  .chat-footer {
    padding: 16px 20px;
    background: white;
    border-top: 1px solid var(--border);
  }

  .input-group {
    display: flex;
    gap: 12px;
    background: #f0f2f5;
    padding: 8px 16px;
    border-radius: 20px;
  }

  .modern-input {
    flex-grow: 1;
    border: none;
    background: transparent;
    outline: none;
    font-size: 15px;
  }

  .modal-overlay {
    display: none; /* Controlled by JS */
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(2px);
    z-index: 99999; /* Ensure it is above everything */
    justify-content: center;
    align-items: center;
  }

  .modal-card {
    background: white;
    padding: 30px;
    border: 4px solid black;
    box-shadow: 10px 10px 0px black;
    width: 90%;
    max-width: 450px;
    position: relative;
  }

  .btn-brutal {
    border: 3px solid black;
    box-shadow: 4px 4px 0px black;
    cursor: pointer;
    font-weight: 900;
    transition: all 0.1s;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-brutal:active {
    transform: translate(2px, 2px);
    box-shadow: 0px 0px 0px black;
  }
</style>

<div class="chat-container">
  <%# Header %>
  <div class="chat-header">
    <div class="user-info">
      <div class="avatar-circle">
        <%= @conversation.seller_profile.userable.name[0].upcase %>
      </div>
      <div>
        <div style="font-weight: 700; color: var(--text-main);"><%= @conversation.item.title %></div>
        <div style="font-size: 12px; color: var(--text-muted);">with <%= @conversation.seller_profile.userable.name %></div>
      </div>

      <%# PROPOSE DEAL BUTTON - Fixed with explicit JS call %>
      <button type="button" 
              class="btn-brutal" 
              style="padding: 10px 20px; background: #ffde03; font-size: 14px;"
              onclick="document.getElementById('propose-modal').style.display='flex'">
        PROPOSE DEAL
      </button>
    </div>

    <%# Messages Body %>
    <div id="chat-window" class="card-body" style="flex-grow: 1; overflow-y: auto; background: #f0f0f0; padding: 20px; display: flex; flex-direction: column; gap: 15px;">
      <% @messages.each do |message| %>
        <% is_current_user = (message.user_id == current_user.id) %>
        
        <div style="display: flex; <%= is_current_user ? 'justify-content: flex-end;' : 'justify-content: flex-start;' %>">
          <div class="message-box" 
               style="max-width: 75%; padding: 12px 18px; border: 3px solid black; font-weight: 600;
               <%= is_current_user ? 'background: #000; color: #fff; box-shadow: -4px 4px 0px #888;' : 'background: #fff; color: #000; box-shadow: 4px 4px 0px black;' %>">
            <p style="margin: 0;"><%= message.body %></p>
            <div style="font-size: 0.7rem; margin-top: 5px; opacity: 0.6; text-align: right;">
              <%= message.created_at.strftime("%I:%M %p") %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Input Section %>
    <div class="message-input" style="padding: 20px; background: white; border-top: 4px solid black;">
      <%= form_with(model: [@conversation, @message], local: true, style: "display: flex; gap: 10px;") do |f| %>
        <%= f.text_field :body, 
            placeholder: "Type your message...", 
            autocomplete: 'off',
            style: "flex-grow: 1; border: 3px solid black; padding: 15px; font-weight: bold; font-size: 16px;" %>
        
        <%= f.submit "SEND", 
            class: "btn-brutal", 
            style: "width: 100px; background: black; color: white;" %>
      <% end %>
    </div>
  </div>
</div>

<%# MODAL %>
<div id="propose-modal" class="modal-overlay">
  <div class="modal-card">
    <h3 style="margin-top: 0;">Make an Offer</h3>
    <p style="font-size: 14px; color: var(--text-muted); margin-bottom: 20px;">
      Confirm the final price for <strong><%= @conversation.item.title %></strong>.
    </p>

    <%= form_with(model: [@conversation, Deal.new], local: true) do |f| %>
      <div style="margin-bottom: 20px;">
        <label style="display: block; font-size: 12px; font-weight: 700; margin-bottom: 8px; color: var(--text-muted);">OFFER AMOUNT ($)</label>
        <%= f.number_field :agreed_price, value: @conversation.item.price, 
            style: "width: 100%; border: 1px solid var(--border); border-radius: 8px; padding: 12px; font-size: 16px; box-sizing: border-box;" %>
      </div>

      <div style="display: flex; gap: 12px; justify-content: flex-end;">
        <button type="button" style="background: none; border: none; color: var(--text-muted); cursor: pointer;" onclick="document.getElementById('propose-modal').style.display='none'">Cancel</button>
        <%= f.submit "Send Offer", class: "btn-action" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function scrollToBottom() {
    const chatWindow = document.getElementById('chat-window');
    if (chatWindow) chatWindow.scrollTop = chatWindow.scrollHeight;
  }

  // Run on initial load and after Turbo navigation
  scrollToBottom();

  // Auto-scroll whenever a new message is added via Turbo Stream
  document.addEventListener("turbo:before-stream-render", function() {
    setTimeout(scrollToBottom, 50);
  });

  // Clear the form after sending (if not using create.turbo_stream.erb)
  document.getElementById("message_form").addEventListener("turbo:submit-end", (event) => {
    if (event.detail.success) {
      event.target.reset();
    }
  });
</script>