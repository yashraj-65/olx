<%# CSS for the Modal and Stacking %>
<style>
  .modal-overlay {
    display: none; 
    position: fixed;
    top: 0; left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(2px);
    z-index: 99999;
    justify-content: center;
    align-items: center;
  }

  .modal-card {
    background: white;
    padding: 30px;
    border: 4px solid black;
    box-shadow: 10px 10px 0px black;
    width: 90%;
    max-width: 450px;
    position: relative;
  }

  /* Default: White box on the left */
  .message-row[data-sender-id="<%= current_user.id %>"] {
    justify-content: flex-end !important;
  }

  .message-row[data-sender-id="<%= current_user.id %>"] .message-box {
    background: #000 !important;
    color: #fff !important;
    box-shadow: -4px 4px 0px #888 !important;
  }


  .btn-brutal {
    border: 3px solid black;
    box-shadow: 4px 4px 0px black;
    cursor: pointer;
    font-weight: 900;
    transition: all 0.1s;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-brutal:active {
    transform: translate(2px, 2px);
    box-shadow: 0px 0px 0px black;
  }
</style>

<div class="chat-wrapper" style="height: calc(100vh - 100px); display: flex; flex-direction: column; padding: 20px; box-sizing: border-box;">
  
  <div class="card-container" style="display: flex; flex-direction: column; height: 100%; border: 4px solid black; background: white; box-shadow: 10px 10px 0px black;">
    
    <%# Header Section %>
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; padding: 15px; border-bottom: 4px solid black;">
      <div style="display: flex; align-items: center;">
        <div class="img-avatar" style="width: 45px; height: 45px; border: 3px solid black; background: #ffde03; margin-right: 15px;"></div>
        <div class="text-chat">
          <span style="font-size: 0.7rem; color: #666; display: block; text-transform: uppercase;">Conversation with</span>
          <span style="font-weight: 900; font-size: 1.2rem;"><%= @conversation.seller_profile.userable.name %></span>
        </div>
      </div>

      <button type="button" 
              class="btn-brutal" 
              style="padding: 10px 20px; background: #ffde03; font-size: 14px;"
              onclick="document.getElementById('propose-modal').style.display='flex'">
        PROPOSE DEAL
      </button>
    </div>

    <%# Messages Body %>
    <div id="chat-window" class="card-body" style="flex-grow: 1; overflow-y: auto; background: #f0f0f0; padding: 20px; display: flex; flex-direction: column; gap: 15px;">
      
      <%# --- REAL-TIME LISTENER --- %>
      <%= turbo_stream_from @conversation %>

      <%# --- MESSAGES TARGET CONTAINER --- %>
      <div id="messages_list" style="display: flex; flex-direction: column; gap: 15px;">
        <%= render @messages %>
      </div>
    </div>

    <%# Input Section %>
    <div class="message-input" style="padding: 20px; background: white; border-top: 4px solid black;">
      <%# Added data: { turbo_action: "replace" } to help clear the form %>
      <%= form_with(model: [@conversation, @message], id: "message_form", style: "display: flex; gap: 10px;") do |f| %>
        <%= f.text_field :body, 
            placeholder: "Type your message...", 
            autocomplete: 'off',
            style: "flex-grow: 1; border: 3px solid black; padding: 15px; font-weight: bold; font-size: 16px;" %>
        
        <%= f.submit "SEND", 
            class: "btn-brutal", 
            style: "width: 100px; background: black; color: white;" %>
      <% end %>
    </div>
  </div>
</div>

<%# THE MODAL %>
<div id="propose-modal" class="modal-overlay">
  <div class="modal-card">
    <button type="button" 
            style="position: absolute; top: 10px; right: 15px; background: none; border: none; font-size: 30px; font-weight: bold; cursor: pointer;" 
            onclick="document.getElementById('propose-modal').style.display='none'">&times;</button>
    
    <h2 style="margin: 0 0 10px 0; text-transform: uppercase;">New Proposal</h2>
    <p style="margin-bottom: 25px; color: #666;">Set the final price for <strong><%= @conversation.item.title %></strong>.</p>

    <%= form_with(model: [@conversation, Deal.new], local: true) do |f| %>
      <div style="margin-bottom: 25px;">
        <label style="display: block; font-weight: 900; margin-bottom: 10px;">AGREED PRICE ($)</label>
        <%= f.number_field :agreed_price, value: @conversation.item.price, 
            style: "width: 100%; border: 3px solid black; padding: 15px; font-size: 20px; font-weight: bold; box-sizing: border-box;" %>
      </div>

      <div style="display: flex; gap: 10px;">
        <%= f.submit "SEND PROPOSAL", class: "btn-brutal", style: "flex: 2; background: #28a745; color: white; padding: 15px;" %>
        <button type="button" class="btn-brutal" style="flex: 1; background: #eee;" onclick="document.getElementById('propose-modal').style.display='none'">CANCEL</button>
      </div>
    <% end %>
  </div>
</div>

<script>
  function scrollToBottom() {
    const chatWindow = document.getElementById('chat-window');
    if (chatWindow) chatWindow.scrollTop = chatWindow.scrollHeight;
  }

  // Auto-scroll on load
  scrollToBottom();

  // Auto-scroll whenever a new message is added via Turbo Stream
  document.addEventListener("turbo:before-stream-render", function() {
    setTimeout(scrollToBottom, 50);
  });

  // Clear the form after sending (if not using create.turbo_stream.erb)
  document.getElementById("message_form").addEventListener("turbo:submit-end", (event) => {
    if (event.detail.success) {
      event.target.reset();
    }
  });
</script>